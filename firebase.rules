rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId}/days/{dayId}/activities/{activityId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // block other writes
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
